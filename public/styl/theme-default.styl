normal-color = #6699cc
light-color = #66ccff
normal-font-color = #444444
light-font-color = #ffffff
normal-border-color = #cccccc
hard-border-color = #aaaaaa
light-border-color = #f5f5f5
sm-font-size = 12px
lg-font-size = 14px

body
  color: normal-font-color
  background transparent no-repeat

.page
  position fixed
  z-index 100
  margin-left 60px
  width 100%
  height 100%
  background #f5f5f5
  top: 0
  left: 0
  background url("http://www.deskcar.com/desktop/fengjing/2013812103350/11.jpg") center 100%
  background-size cover
  .pjax-page
    margin 8px
    width 100%
    height 100%

.widget
  position absolute
  z-index 101
  top 40px
  left 40px
  overflow hidden
  .widget-title
    height 30px
    cursor default
    line-height 30px
    color #ffffff
    position relative
    padding 0 0 0 12px
    .widget-control-pad
      height 24px
      position absolute
      top 0
      right 6px
      line-height 24px
      .widget-control-btn
        display inline-block
        cursor pointer
        transition all .3s
        width 24px
        height 24px
        text-align center
        &.widget-close:hover
          background-color #d9534f
        &.widget-reload:hover
          background-color #f0ad4e
  .widget-content
    padding 20px
    overflow auto
    height inherit
  .progress-bar
    position absolute
    bottom: 0
    left 0
    width 0
    height 2px
    background linear-gradient(to right, light-color 0%, #d9534f 100%)
    transition width 5s ease-in-out 0s
    &.active
      width 100%
  &.widget-default
    background rgba(0, 0, 0, .3)
    width 400px
    height 200px
    border 1px solid transparent
    border-top none
    border-radius 5px 5px 0 0
    transition box-shadow .3s
    &:hover
      box-shadow 0 0 10px #6699cc
    .widget-title
      background transparent
  &.active
    z-index 110
    box-shadow 0 0 10px #6699cc

.nav
  width 60px
  height 100%
  position fixed
  background-color normal-color
  transition all .3s
  z-index 101
  top: 0
  left: 0
  box-shadow 0 3px 5px #aaaaaa
  .logo
    color light-font-color
    font-size 48px
    width 60px
    height 60px
    line-height 60px
    border 3px solid transparent
    text-align center
    cursor pointer
    transition all .3s
    &:hover
      border-color light-border-color
      border-radius 50%
  .foot-menu
    position fixed
    bottom 10px
    left 0

#win
  position fixed
  width 100%
  height 100%
  z-index 10
  &.active
    z-index 110
  .start-menu
    position absolute
    z-index 100
    top: -60px
    left: 0
    width 100%
    height 100%
    opacity 0
    background rgba(102, 153, 204, .7)
    transition all .3s
    padding 80px
    &.active
      opacity 1
      top 0
    .menu-item
      width 90px
      height 90px
      line-height 84px
      display inline-block
      color #ffffff
      transition all .3s
      cursor pointer
      margin 5px
      background light-color
      border 3px solid light-color
      position relative
      overflow hidden
      text-align center
      .icon
        font-size 40px
      &:hover
        border-color #ffffff
        border-radius 15px

.notice
  display block
  position fixed
  opacity 0
  top -100px
  right 30px
  width 250px
  padding 15px
  border-radius 8px
  box-shadow 3px 3px 5px #aaaaaa
  transition all .3s ease-out
  overflow hidden
  line-height 30px
  color #ffffff
  &.active
    opacity 1
    top 30px
  &.sight-info
    background #5bc0de
  &.sight-warning
    background #f0ad4e
  &.sight-default
    background #6699cc
  &.sight-danger
    background #d9534f
  .notice-message
    text-align center
    float left
    width 190px
    height 30px
    margin 0
  .notice-control
    text-align center
    width 30px
    height 30px
    float left
    margin 0
    .icon
      cursor pointer

#musicWidget
  display block
  .player
    color #f5f5f5
    .player-box
      .player-lrc
        font-size 14px
        line-height 20px
        height 60px
        overflow scroll
        span
          display block
      .player-control
        border-top 1px solid #f5f5f5
        padding 4px 0
        overflow hidden
        .control-btn
          font-size 20px
          line-height 20px
          float left
          cursor pointer



