normal-color = #6699cc
light-color = #66ccff
normal-font-color = #444444
light-font-color = #ffffff
normal-border-color = #cccccc
hard-border-color = #aaaaaa
light-border-color = #f5f5f5
sm-font-size = 12px
lg-font-size = 14px

body
  color: normal-font-color
  background transparent no-repeat

.page
  position fixed
  z-index 100
  margin-left 61px
  width 100%
  height 100%
  background #f5f5f5
  top: 0
  left: 0
  .progress-bar
    width 100%

.nav
  width 61px
  height 100%
  position fixed
  background-color normal-color
  border-right 1px solid normal-border-color
  transition all .3s
  z-index 100
  top: 0
  left: 0
  &:hover
    border-right 1px solid hard-border-color
    box-shadow 0 1px 3px hard-border-color
  .logo
    color light-font-color
    font-size 48px
    width 60px
    height 60px
    line-height 60px
    border 3px solid transparent
    text-align center
    cursor pointer
    transition all .3s
    &:hover
      border-color light-border-color

#win
  position fixed
  width 100%
  height 100%
  z-index 10
  &.active
    z-index 101
  .start-menu
    position absolute
    z-index 100
    top: -60px
    left: 0
    width 100%
    height 100%
    opacity 0
    background rgba(102, 153, 204, .7)
    transition all .3s
    padding 100px
    &.active
      opacity 1
      top 0
    .menu-item
      display inline-block
      padding 20px
      color #ffffff
      transition all .3s
      cursor pointer
      margin 5px
      .icon
        font-size 40px
      &:nth-child(2n)
        background #c62c31
        &:hover
          background #fc8c84
      &:nth-child(2n-1)
        background #a0b782
        &:hover
          background #b5d592
