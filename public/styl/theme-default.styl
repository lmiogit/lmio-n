normal-color = #6699cc
light-color = #66ccff
normal-font-color = #444444
light-font-color = #ffffff
normal-border-color = #cccccc
hard-border-color = #aaaaaa
light-border-color = #f5f5f5
sm-font-size = 12px
lg-font-size = 14px


body
  color: normal-font-color
  background transparent no-repeat


.page
  position fixed
  z-index 100
  margin-left 61px
  width 100%
  height 100%
  background #f5f5f5
  top: 0
  left: 0
  .progress-bar
    position absolute
    top: 0
    left -1px
    width 0
    height 2px
    background linear-gradient(to right, light-color 0%, #ff0000 100%)
    transition width 5s ease-in-out 0s
    &.active
      width 100%
  .pjax-page
    margin 8px
    width 100%
    height 100%


.nav
  width 60px
  height 100%
  position fixed
  background-color normal-color
  transition all .3s
  z-index 100
  top: 0
  left: 0
  .logo
    color light-font-color
    font-size 48px
    width 60px
    height 60px
    line-height 60px
    border 3px solid transparent
    text-align center
    cursor pointer
    transition all .3s
    &:hover
      border-color light-border-color
      border-radius 50%
  .foot-menu
    position fixed
    bottom 10px
    left 0


#win
  position fixed
  width 100%
  height 100%
  z-index 10
  &.active
    z-index 110
  .start-menu
    position absolute
    z-index 100
    top: -60px
    left: 0
    width 100%
    height 100%
    opacity 0
    background rgba(102, 153, 204, .7)
    transition all .3s
    padding 80px
    &.active
      opacity 1
      top 0
    .menu-item
      width 90px
      height 90px
      line-height 84px
      display inline-block
      color #ffffff
      transition all .3s
      cursor pointer
      margin 5px
      background light-color
      border 3px solid light-color
      position relative
      overflow hidden
      text-align center
      .icon
        font-size 40px
      &:hover
        border-color #ffffff
        border-radius 15px
