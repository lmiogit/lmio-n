<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=0">
    <link rel='stylesheet' href='/css/index.css'/>
    <link rel="stylesheet" href="/css/iconfont.css">
</head>
<body>
<div id="body" class="body">
    <nav id="nav" class="nav">
        <div class="logo">
            L
        </div>
    </nav>
    <div id="page" class="page">
        <div id="pjax-page" class="pjax-page">
            <div id="music-widget" class="widget widget-default widget-active" data-type="widget" data-icon="#music">
                <div class="widget-box">
                    <div class="widget-title">
                        <i class="icon i-music"></i>
                        <b>Music</b>
                        <div class="widget-control-pad">
                            <div title="Fold" class="widget-control-btn widget-fold">
                                <i class="icon i-category-r"></i>
                            </div>
                            <div title="Reload" class="widget-control-btn widget-reload">
                                <i class="icon i-lighting"></i>
                            </div>
                            <div title="Close" class="widget-control-btn widget-close">
                                <i class="icon i-wrong"></i>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content">

                    </div>
                    <div class="progress-bar"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="win" class="win">
    <div class="start-menu">
        <a class="menu-item" data-href="/home" data-type="page">
            <i class="icon i-home"></i>
        </a>
        <a class="menu-item" data-href="/users" data-type="page">
            <i class="icon i-user"></i>
        </a>
        <a class="menu-item" data-href="/game" data-type="page">
            <i class="icon i-game"></i>
        </a>
        <a class="menu-item" data-href="/music" data-type="get">
            <i class="icon i-music"></i>
        </a>
        <a class="menu-item" data-href="/star" data-type="post">
            <i class="icon i-star"></i>
        </a>
    </div>
</div>

<script src="/js/jquery.min.js"></script>
<script>
    $(function () {
        $('.progress-bar').addClass('active');
        $('.logo').off('click').on('click', function () {
            $('#win').addClass('active').find('.start-menu').addClass('active');
        });
        $('#win').off('click').on('click', function () {
            var _self = $(this);
            $(this).find('.start-menu').removeClass('active');
            window.setTimeout(function () {
                _self.removeClass('active');
            }, 400);
        });

        var pjaxLink = $('a[data-type="page"]');
        if (pjaxLink.length > 0) {
            $.each(pjaxLink, function (k, v) {
                $(v).on('click', function (event) {
                    event.preventDefault();
                    var _self = $(this);
                    var option = {
                        url: _self.attr('data-href'),
                        beforeAjax: function () {
                            console.log('pjax start');
                        },
                        afterAjax: function () {
                            console.log('pjax complete');
                        }
                    }
                    pjaxHandle(option);
                })
            })
        }

        function pjaxHandle(option) {
            if (option.beforeAjax) {
                option.beforeAjax();
            }
            if (option.afterAjax) {
                option.complete = option.afterAjax;
            }
            option.dataType = 'html';
            option.type = 'get';
            option.success = function (data) {
                if (data) {
                    $('#pjax-page').empty().append(data);
                    history.pushState(option.url, 'pjax', option.url);
                }
            }
            option.beforeSend = function (xhr) {
                xhr.setRequestHeader("accessType","pjax")
            }
            $.ajax(option);
        }
    });
</script>
</body>
</html>
